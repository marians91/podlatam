{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Activities Registry Schema",
    "properties": {
        "solutionId": {
            "type": "string"
        },
        "solution": {
            "type": "string"
        },
        "activities": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "code",
                        "description"
                    ]
                }
            ]
        }
    },
    "required": [
        "solutionId",
        "solution",
        "activities"
    ]
}